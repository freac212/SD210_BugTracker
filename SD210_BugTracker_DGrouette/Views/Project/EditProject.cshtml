@model ProjectManipulationViewModel

@{
    ViewBag.Title = $"Editing project: {Model.Title}";
    ViewBag.Description = "Change the details of project";
}

<form method="post" enctype="multipart/form-data">
    <dl>
        @Html.ValidationMessageFor(p => p.Title)
        <dt>Project Title: </dt>
        <dd>@Html.TextBoxFor(p => p.Title, new { placeholder = "New Project" })</dd>
    </dl>
    <button type="submit" class="btn btn-default">Submit</button>
</form>

