<!DOCTYPE html>

<html lang="en">

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Project Manager - @ViewBag.Title</title>
    <link href="~/Content/TemplateBootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/TemplateBootstrap/css/bootstrap-responsive.min.css" rel="stylesheet" />
    <link href="~/Content/TemplateCSS/theme.css" rel="stylesheet" />
    <link href="~/Content/TemplateImages/icons/css/font-awesome.css" rel="stylesheet" />
    <link type="text/css" href='http://fonts.googleapis.com/css?family=Open+Sans:400italic,600italic,400,600' rel='stylesheet'>

    @*@Styles.Render("~/Content/css")*@
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/fontawesome-free/css/all.min.css")
    @RenderSection("css", false)
</head>

<body>

    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".navbar-inverse-collapse">
                    <i class="icon-reorder shaded"></i>
                </a>

                <a class="brand" href="@Url.Action("Index", "Projects")">
                    <i class="fas fa-users"></i>
                    Project Manager
                </a>

                <div class="nav-collapse collapse navbar-inverse-collapse">
                    <ul class="nav pull-right">
                        @Html.Partial("_LoginPartial")
                    </ul>
                </div>
            </div>
        </div><!-- /navbar-inner -->
    </div><!-- /navbar -->

    <div class="wrapper">
        <div class="container">
            <div class="row">
                <div class="span3">
                    <div class="sidebar">

                        <ul class="widget widget-menu unstyled">
                            <li>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <a class="collapsed" data-toggle="collapse" href="#togglePages">
                                        <i class="menu-icon icon-folder-open"></i>
                                        <i class="icon-chevron-down pull-right"></i><i class="icon-chevron-up pull-right"></i>
                                        Projects
                                    </a>
                                    <ul id="togglePages" class="collapse unstyled">
                                        <li>
                                            <a href="@Url.Action("AssignedProjects", "Projects")">
                                                <i class="icon-inbox"></i>
                                                Assigned Projects
                                            </a>
                                        </li>
                                        @if (ProjectHelper.UserIsAdminOrManager(User))
                                        {
                                            <li>
                                                <a href="@Url.Action("Index", "Projects")">
                                                    <i class="icon-inbox"></i>
                                                    All Projects
                                                </a>
                                            </li>
                                            <li>
                                                <a href="@Url.Action("Create", "Projects")">
                                                    <i class="icon-plus"></i>
                                                    Create New Project
                                                </a>
                                            </li>
                                        }
                                    </ul>
                                }
                            </li>
                            @if (User.IsInRole(ProjectConstants.AdminRole))
                            {
                                <li>
                                    @*@Html.ActionLink("Role Manager", "UsersAndRoles", "Projects")*@
                                    <a href="@Url.Action("UsersAndRoles", "Projects")">
                                        <i class="menu-icon icon-edit"></i>
                                        @* fas fa-user-edit *@
                                        Role Manager
                                    </a>
                                </li>
                            }
                        </ul>
                        <ul class="widget widget-menu unstyled">
                            @if (!User.Identity.IsAuthenticated)
                            {
                                @*Only anonymous/ unregistered users can see this*@
                                <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
                            }
                            else
                            {
                                <li>
                                    <a href="javascript:document.getElementById('logoutForm').submit()">
                                        <i class="menu-icon icon-signout"></i>
                                        Logout
                                    </a>
                                </li>
                            }
                        </ul>

                    </div>
                    <!--/.sidebar-->
                </div>
                <!--/.span3-->


                <div class="span9">
                    <div class="content">

                        <div class="module">
                            <div class="module-head">
                                <h3>@ViewBag.Title</h3>
                            </div>
                            <div class="module-body">
                                @RenderBody()
                            </div>
                        </div>

                    </div>
                    <!--/.content-->
                </div>
                <!--/.span9-->
            </div>
        </div>
        <!--/.container-->
    </div>
    <!--/.wrapper-->

    <div class="footer">
        <div class="container">
            <b class="copyright">&copy; 2019 DonnyG</b> All rights reserved. <small>Template By: Edmin - EGrappler.com </small>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)

    @* Template Scripts *@
    @*@Scripts.Render("~/Scripts/SiteTemplateScripts/jquery-1.9.1.min.js")*@
    @Scripts.Render("~/Scripts/SiteTemplateScripts/jquery-ui-1.10.1.custom.min.js")
    @Scripts.Render("~/bundles/bootstrap")  @*Non template bootstrap*@

    @*@Scripts.Render("~/Content/TemplateBootstrap/js/bootstrap.min.js")*@
    @Scripts.Render("~/Scripts/SiteTemplateScripts/flot/jquery.flot.js")
</body>
</html>

