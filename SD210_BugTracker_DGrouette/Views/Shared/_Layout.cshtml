                    <i class="fas fa-users"></i>
                    Project Manager
                </a>

                <div class="nav-collapse collapse navbar-inverse-collapse">
                    <ul class="nav pull-right">
                        @Html.Partial("_LoginPartial")
                    </ul>
                </div>

                @* Keeping this here incase I need some dropdowns down the road. *@
