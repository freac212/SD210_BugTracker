<!DOCTYPE html>

<html lang="en">

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Project Manager - @ViewBag.Title</title>
    @*<link href="~/Content/TemplateBootstrap/css/bootstrap.min.css" rel="stylesheet" />
        <link href="~/Content/TemplateBootstrap/css/bootstrap-responsive.min.css" rel="stylesheet" />
        <link href="~/Content/TemplateCSS/theme.css" rel="stylesheet" />*@
    <link href="~/Content/TemplateImages/icons/css/font-awesome.css" rel="stylesheet" />
    <link type="text/css" href='http://fonts.googleapis.com/css?family=Open+Sans:400italic,600italic,400,600' rel='stylesheet'>

    @Styles.Render("~/Content/css") @*++Q*@
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/fontawesome-free/css/all.min.css")
    @RenderSection("css", false)
</head>

<body>
    <header>
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="@Url.Action("Index", "Projects")">
                        <i class="fas fa-users"></i>
                        Project Manager
                    </a>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    @*<form class="navbar-form navbar-left" style="display: flex; flex-direction: row; align-content: center;">
                             Search Bar
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Search">
                            </div>
                            <button type="submit" class="btn btn-default">Submit</button>
                        </form>*@

                    <ul class="nav navbar-nav navbar-right">
                        <!-- Link + Dropdown Menu -->
                        @*<li><a href="#">Link</a></li>*@
                        @Html.Partial("_LoginPartial")
                    </ul>
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
        </nav>
    </header>
    <div class="wrapper">
        <div class="container">
            <div class="row">

                <div class="col-lg-3">
                    <!--Side Navbar-->
                    <nav id="sidebar">

                        <ul class="widget widget-menu unstyled">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li>

                                    <a href="#projectSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                                        Projects
                                    </a>
                                    <ul class="collapse list-unstyled" id="projectSubmenu">
                                        <li>
                                            <a href="@Url.Action("AssignedProjects", "Projects")">
                                                <i class="icon-inbox"></i>
                                                Assigned Projects
                                            </a>
                                        </li>
                                        @if (ProjectHelper.IsAdminOrManager(User))
                                        {
                                            <li>
                                                <a href="@Url.Action("Index", "Projects")">
                                                    <i class="icon-inbox"></i>
                                                    All Projects
                                                </a>
                                            </li>
                                            <li>
                                                <a href="@Url.Action("CreateProject", "Projects")">
                                                    <i class="icon-plus"></i>
                                                    Create New Project
                                                </a>
                                            </li>
                                        }
                                    </ul>
                                </li>
                                @* ======== Tickets ======== *@
                                <li>
                                    @*@Html.ActionLink("Role Manager", "UsersAndRoles", "Projects")*@
                                    <a href="@Url.Action("ListTickets", "Ticket")">
                                        <i class="menu-icon icon-edit"></i>
                                        @* fas fa-user-edit *@
                                        Tickets
                                    </a>
                                </li>
                            }
                            @if (User.IsInRole(ProjectConstants.AdminRole))
                            {
                                <li>
                                    @*@Html.ActionLink("Role Manager", "UsersAndRoles", "Projects")*@
                                    <a href="@Url.Action("UsersAndRoles", "Roles")">
                                        <i class="menu-icon icon-edit"></i>
                                        @* fas fa-user-edit *@
                                        Role Manager
                                    </a>
                                </li>
                            }
                        </ul>
                        <ul class="widget widget-menu unstyled">
                            @if (User.Identity.IsAuthenticated)
                            {
                                @*Only anonymous/ unregistered users can see this*@
                                @*<li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>*@
                                <li>
                                    <a href="javascript:document.getElementById('logoutForm').submit()">
                                        <i class="menu-icon icon-signout"></i>
                                        Logout
                                    </a>
                                </li>
                            }
                        </ul>

                    </nav>
                    <!--/.sidebar-->
                </div>
                <!--/.span3-->


                <div class="col-lg-9">
                    <div class="content">

                        <div class="module">
                            <div class="module-head">
                                <h3>@ViewBag.Title</h3>
                            </div>
                            <div class="module-body">
                                @RenderBody()
                            </div>
                        </div>

                    </div>
                </div>

                <!--/.span9-->
            </div>
        </div>
        <!--/.container-->
    </div>
    <!--/.wrapper-->

    <div class="footer">
        <div class="container">
            <b class="copyright">&copy; 2019 DonnyG</b> All rights reserved.
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)

    @* Template Scripts *@
    @*@Scripts.Render("~/Scripts/SiteTemplateScripts/jquery-1.9.1.min.js")*@
    @Scripts.Render("~/Scripts/SiteTemplateScripts/jquery-ui-1.10.1.custom.min.js")
    @Scripts.Render("~/bundles/bootstrap")  @*Non template bootstrap*@

    @*@Scripts.Render("~/Content/TemplateBootstrap/js/bootstrap.min.js")*@
    @Scripts.Render("~/Scripts/SiteTemplateScripts/flot/jquery.flot.js")
</body>
</html>