@model SD210_BugTracker_DGrouette.Models.ChangeDisplayNameViewModel
@{
    ViewBag.Title = "Change DisplayName";
}

<span>The display name is shown on projects to identify you. (Ex: BobbyJohnson)</span>

@using (Html.BeginForm("ChangeDisplayName", "Manage", FormMethod.Post, new { @class = "form-vertical", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.DisplayName, new { @class = "col-md-2 control-label" })
    </div>
    <div class="form-group">
            @Html.TextBoxFor(m => m.DisplayName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Change Display Name" class="btn btn-default" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}